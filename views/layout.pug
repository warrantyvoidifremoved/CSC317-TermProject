doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        title #{title}
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/css/global-styles-desktop.css")
        block stylesheets
    body
        nav#navbar
            div#title Rocks!
            ul#nav-links
                li
                    a(href="/") Products ▾
                    ul#nav-products
                        li: a(href="/igneous") Igneous
                        li: a(href="/sedimentary") Sedimentary
                        li: a(href="/metamorphic") Metamorphic
                li: a(href="/about") About
                li: a(href="/faq") FAQ
                li
                    img.nav-img(src="/images/user.webp", alt="User Profile")
                    ul#profile-options
                        li: a(href="/user") Profile
                        li: a(href="/signup") Sign Up
                        li: a(href="/login") Log in
                li: a(href="/cart")
                    img.nav-img(src="/images/shopping-cart.webp", alt="Shopping Cart")
        block content
        footer
            #footer
                #SFSU © 2025 San Francisco State University - Introduction to Web Software Development
                .social-media
                    a(href="/x", target="_blank")
                        img#X(src="/images/SocialMedia/X-logo.png", alt="X Logo")
                    a(href="/instagram", target="_blank")
                        img#instagram(src="/images/SocialMedia/Instagram-logo.png", alt="Instagram Logo")
                    a(href="/discord", target="_blank")
                        img#discord(src="/images/SocialMedia/Discord-logo.png", alt="Discord Logo")
extends layout

block stylesheets
    link(rel="stylesheet", href="/css/cart-desktop.css")

block content
    .payment-wrapper
        .payment-left
            section.cart-items
                h2 Cart
                each product in cart
                    .cart-item
                        .left
                            .image
                                a(href=`/products/${product.product_id}`)
                                    img(src=product.img_src, alt=product.name)
                            .item
                                a(href=`/products/${product.product_id}`)
                                    span #{product.name}
                                form(action="/cart/update" method="POST")
                                    input(type="hidden" name="product_id" value=product.product_id)
                                    input(type="number" id="quantity" name="quantity" min="0" value=product.quantity onchange="this.form.submit()")
                        .price
                            form(action="/cart/update" method="POST")
                                input(type="hidden" name="product_id" value=product.product_id)
                                input(type="hidden" name="quantity" value=0)
                                button(type="submit" style="background:none; border:none; cursor:pointer;") üóëÔ∏è
                            span US $#{product.price.toFixed(2)}
            section.personal-info
                h2 Shipping Information
        .payment-right
            section.order-summary
                h2 Order Summary
                each product in cart
                    .product-price
                        span #{product.name}
                        span US $#{product.price.toFixed(2)} x #{product.quantity}
                hr
                .total
                    strong Total:
                    strong US $#{totalPrice.toFixed(2)}
            section.promo-code
                input(type="text", name="code", placeholder="Enter Promo Code")
            section.card-info-container
                h2.card-info-1 Payment Information
                .card-info-2
                    span Rocks! accepts the following major credit and debit cards:
                    img(src="/images/visa_mastercard_discover_amex.png", alt=Accepted Payment Methods)
                hr
                .card-info-3
                    form(name="payment", action="#", method="POST")
                        .form-row
                            label(for="card-number") Card Number:
                            input(type="text", name="card-number", placeholder="")
                        .form-row
                            label(for="card-name") Card Name:
                            input(type="text", name="card-name", placeholder="")
                        .form-row
                            label(for="card-cvv") CVV:
                            input(type="text", name="card-cvv", placeholder="")
                        .form-row
                            label(for="card-expiration") Expiration Date:
                            input(type="text", name="card-expiration", placeholder="MM/YY")
                        button.pay-btn(type="submit") Pay